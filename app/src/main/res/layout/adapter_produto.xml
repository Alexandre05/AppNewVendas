<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ImageProduto"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        app:srcCompat="@drawable/acampamento" />

    <TextView
        android:id="@+id/TextNomeProduto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Acampamento"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/TextInfomacao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Informações"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/TextValorArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:inputType="numberDecimal"
        android:text="Valor Àrea"
        android:textSize="14sp" />


    <include layout="@layout/divisor" />

</LinearLayout>